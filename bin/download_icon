#!/bin/bash
# Download a UI icon from Heroicons (solid)
# Usage: bin/download_icon heart home

dir="$(dirname "$0")/../_icons"

for name in "$@"; do
  curl -sf "https://raw.githubusercontent.com/tailwindlabs/heroicons/master/src/24/solid/${name}.svg" -o "${dir}/${name}.svg" && echo "Downloaded: ${name}" || echo "Failed: ${name}"
done
